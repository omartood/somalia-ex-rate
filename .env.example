# Somali Exchange Rates Configuration

# API Keys (optional - for enhanced providers)
FIXER_API_KEY=your_fixer_api_key_here
CURRENCYAPI_KEY=your_currencyapi_key_here

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=alerts@sosx.com

# Database Configuration (optional)
DATABASE_TYPE=sqlite
DATABASE_URL=sqlite:///home/sosx/.sosx/database.sqlite
# For PostgreSQL:
# DATABASE_TYPE=postgresql
# DATABASE_URL=postgresql://user:password@localhost:5432/sosx

# Cache Configuration
CACHE_TTL_MS=21600000  # 6 hours in milliseconds
CACHE_PATH=/home/sosx/.sosx/cache.json

# Application Settings
NODE_ENV=production
LOG_LEVEL=info
PORT=8080

# WebSocket Configuration
WS_PORT=8080
WS_UPDATE_INTERVAL=60000  # 1 minute in milliseconds

# Alert Configuration
ALERT_CHECK_INTERVAL=300000  # 5 minutes in milliseconds
MAX_ALERTS_PER_USER=50

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000  # 15 minutes in milliseconds

# Security
JWT_SECRET=your_jwt_secret_here
WEBHOOK_SECRET=your_webhook_secret_here

# Localization
DEFAULT_LANGUAGE=en
DEFAULT_LOCALE=en-US
SUPPORTED_LANGUAGES=en,so,ar

# Provider Configuration
PRIMARY_PROVIDER=exchangerate-host
FALLBACK_PROVIDERS=fixer,currencyapi
PROVIDER_TIMEOUT=10000  # 10 seconds
MAX_RETRIES=3

# Export Configuration
MAX_EXPORT_RECORDS=10000
EXPORT_PATH=/home/sosx/.sosx/exports

# Somalia Market Data
SOMALIA_DATA_UPDATE_INTERVAL=3600000  # 1 hour
INCLUDE_BLACK_MARKET_RATES=true

# Transfer Fee Configuration
TRANSFER_FEE_CACHE_TTL=86400000  # 24 hours
SUPPORTED_PROVIDERS=western-union,remitly,worldremit,wise

# Monitoring
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
METRICS_ENABLED=true
PROMETHEUS_PORT=9090