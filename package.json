{
  "name": "somali-exchange-rates",
  "version": "0.1.0",
  "description": "Fetch, cache, format and convert Somali Shilling (SOS) exchange rates with offline fallback.",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "sosx": "dist/cli.cjs"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup src/index.ts src/cli.ts --format esm,cjs",
    "test": "vitest run",
    "prepublishOnly": "npm run build && npm test"
